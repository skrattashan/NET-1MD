<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NET2MDversion5.EditSubmission"
             Title="EditSubmission"
             Appearing="ContentPage_Appearing">
    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Label Text="Edit Submission" FontSize="Medium"/>
            <Label Text="Checked - Edit mode, Unchecked - Delete mode" /> <!--no pasniedzejas lekciju koda faila-->
            <CheckBox x:Name="IsEditingChx" />
            <ListView x:Name="SubmissionList" ItemTapped="SubmissionList_ItemTapped" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>