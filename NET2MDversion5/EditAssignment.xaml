<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NET2MDversion5.EditAssignment"
             Title="EditAssignment">
    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Label 
                Text="Edit Assignment"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                FontSize="Medium"/>
            <Label Text="Pick Assignment date"/>
            <DatePicker x:Name="AssignmentDate" />
            <Picker x:Name="AssignmentCourse" Title="Select Course"     
                ItemsSource="{Binding Courses}" 
                ItemDisplayBinding="{Binding Name}"/>
            <Entry x:Name="AssignmentDescription" Placeholder="Description" />
            <Button Text="Save Assignment" Clicked="OnEditAssignmentClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>